# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pobeer

# Encryption key for API keys (32-byte hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Access code for new user registration
ACCESS_CODE=changeme

# Session secret (random string)
SESSION_SECRET=

# Email (SMTP) - optional, invoices will be logged if not configured
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ByBit platform account UID (for receiving invoice payments)
PLATFORM_BYBIT_UID=
